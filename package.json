{
  "name": "trimly",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=--no-deprecation concurrently -n \"BACK,FRONT\" -c \"cyan,magenta\" --prefix \"[{name}]\" \"npm run --silent dev:backend\" \"npm run --silent dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "concurrently -n \"BACK,FRONT\" -c \"cyan,magenta\" --prefix \"[{name}]\" \"npm run --silent start:backend\" \"npm run --silent start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0"
  }
}
