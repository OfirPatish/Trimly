# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/trimly?schema=public"

# JWT Secret (must be at least 32 characters for production)
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters-long"

# Server Port (optional, defaults to 3000)
PORT=3000

# Frontend URL for CORS (required in production, comma-separated for multiple origins)
# Example: FRONTEND_URL="https://trimly-frontend.onrender.com,https://www.trimly.com"
FRONTEND_URL="http://localhost:3001"

# Node Environment (optional, defaults to development)
NODE_ENV=development